from aws_cdk import CfnOutput, Stack
import aws_cdk.aws_ec2 as ec2
from constructs import Construct
            


        # Setting up the first VPC
class VPC1_Stack(Construct):
    def __init__(self, scope: Construct, id: str, **kwargs) -> None:
        super().__init__(scope, id)
        
        self.vpc = ec2.Vpc(self, "WebServerVPC",
                            # 1 AZ, 2 subnets. 1 Public en 1 Isolated
                           max_azs=1,
                           ip_addresses=ec2.IpAddresses.cidr("10.10.10.0/24"),
                           subnet_configuration=[ec2.SubnetConfiguration(
                               subnet_type=ec2.SubnetType.PUBLIC,
                               name="Public",
                               cidr_mask=24
                           )
                           ],
                           # nat_gateway_provider=ec2.NatProvider.gateway(),
                           nat_gateways=0,
                           )

class KeyPairWS_Stack(Construct):
    def __init__(self, scope: Construct, id: str, **kwargs) -> None:
        super().__init__(scope, id)

        #Add Keys:
        self.key_pair = ec2.CfnKeyPair(self, "WebServerKey",
        key_name="WebServerKey",

        )
        CfnOutput(self, "PrivateKeyOutput", value=self.key_pair.key_pair_name)

class WebserverStack(Construct):
    def __init__(self, scope: Construct, id: str, vpc_fn, key_pair_fn, **kwargs) -> None:
        super().__init__(scope, id)

        
        # Create an EC2 instance
        instance = ec2.Instance(
            self,
            "WebServer",
            instance_type=ec2.InstanceType.of(ec2.InstanceClass.BURSTABLE3, ec2.InstanceSize.MICRO),
            machine_image=ec2.MachineImage.latest_amazon_linux2(),
            vpc=self.vpc,
            vpc_subnets=ec2.SubnetSelection(subnet_type=ec2.SubnetType.PUBLIC)  # Use public subnet
        )

        #Make everything deployable together.
class Spaghetti_Stack(Stack):

    def __init__(self, scope: Construct, id: str, **kwargs) -> None:
        super().__init__(scope, id, **kwargs)
        vpc1_construct      = VPC1_Stack(self, "Vpc1")
        key_pair_construct  = KeyPairWS_Stack(self, "WebKey")
        webserver_construct  = WebserverStack(self, "Webserver",
                                               vpc_fn=lambda: vpc1_construct.vpc,
                                               key_pair_fn=lambda:key_pair_construct.key_pair)

        CfnOutput(self, "VpcOutput", value=vpc1_construct.vpc.vpc_id)
        CfnOutput(self, "KeyPairOutput", value=key_pair_construct.key_pair.key_pair_name)
